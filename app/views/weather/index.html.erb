<div class="weather_box">
	<div class="top_bar">
		<div class="conditions">
		<p>
			<%= @temperature %>&deg;C, <%= @text_condition %>
		</p>
		</div>
		<div class="weather_icon">
			<%= image_tag("cloud-sun.svg") %>
		</div>
	</div>
	<div class="bottom_bar">
		<div class="astronomy">
			<%= image_tag(@astro_icon) %>
			<p>Sunrise <%= @sunrise %></p>
			<p>Sunset <%= @sunset %></p>
		</div>
		<div class="wind">
			<%= image_tag("wind.svg") %>
			<p>Wind</p>
			<p><%= @wind_speed %> km/h</p>
		</div>
	</div>
	<div class="instagram_bar">
		<% @instagram.each do |instagram| %>
			<%= image_tag instagram.images.standard_resolution.url %>
		<% end %>
	</div>
</div>
